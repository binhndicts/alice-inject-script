{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015.promise",
      "es2015",
      "es2016",
      "es5",
      "esnext"
    ],
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./build"
  },
  "exclude": [
    "build",
    "dist",
    "../node_modules",
    "__tests__",
    "./**/__tests__/*.ts",
    "./**/__tests__/*.tsx",
    "./**/__mocks__/*.ts",
    "gulpfile.js",
    "jest-setup.js",
    "__mocks__",
    "webpack.config.js",
    "webpack.config.production.js"
],
}
